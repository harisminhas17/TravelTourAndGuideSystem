<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Traveltourandguidesystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Light Mode-->

    <!--Screen background if light Mode is On-->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>


    <!--Text background if light Mode is On-->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--Button Background if light Mode is On-->
    <style name="BUTTON">
        <item name="android:background">#11A5A5</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>