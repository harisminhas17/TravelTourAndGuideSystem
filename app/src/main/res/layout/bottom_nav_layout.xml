<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/bg_rounded_bottom"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/tv_main_home"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/tv_main_loc"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"

        app:srcCompat="@drawable/ic_location_pin_white" />

    <ImageView
        android:id="@+id/tv_main_gallery"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_albums_white" />

    <ImageView
        android:id="@+id/tv_main_bar"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/baseline_segment_24" />
</LinearLayout>