<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.BookingTourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/tv_booking_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="Booking Reservation"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Enter Your Personal Details"
                android:textColor="#737373"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tv_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_green_rounded"
                android:drawableLeft="@drawable/baseline_person_outline_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Enter Your Full Name"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/tv_book_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_green_rounded"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Enter Your Phone Number"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/tv_book_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_green_rounded"
                android:drawableLeft="@drawable/baseline_home_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Enter Your Address"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/tv_book_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_green_rounded"
                android:drawableLeft="@drawable/baseline_location_city_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="City"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/tv_book_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_green_rounded"
                android:drawableLeft="@drawable/baseline_location_city_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Province"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_book_arrival_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_green_rounded"
                android:drawableLeft="@drawable/baseline_date_range_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Arrival Date (DD-MM-YYYY) "
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_book_departure_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/profile_green_rounded"
                android:drawableLeft="@drawable/baseline_date_range_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Departure Date (DD-MM-YYYY)"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Enter Your Hotel Booking Details"
                android:textColor="#737373"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tv_h_book_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_message_rounded"
                android:drawableLeft="@drawable/baseline_meeting_room_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="No. of Rooms"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/tv_h_book_r_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_message_rounded"
                android:drawableLeft="@drawable/baseline_meeting_room_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Single Room or Double Room"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/tv_h_book_beds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_message_rounded"
                android:drawableLeft="@drawable/baseline_bed_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="Single Bed or Double Bed"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/tv_h_book_guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_message_rounded"
                android:drawableLeft="@drawable/baseline_groups_3_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_bold"
                android:hint="No. of Guests"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Special Requests"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tv_h_book_s_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_message_rounded"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:minLines="5"
                android:layout_gravity="center"
                android:hint="Enter Special Requests or Requirements"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                android:text="Do You Need Tour Guide?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox_tour_guide_yes"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Yes" />

                <CheckBox
                    android:id="@+id/checkBox_tour_guide_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="No" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                android:text="Do You Need Transportation?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox_transport_yes"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Yes" />

                <CheckBox
                    android:id="@+id/checkBox_transport_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="No" />

            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Confirm"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_book_now"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round"
                android:layout_marginBottom="40dp"
                android:text="Done"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:textColor="@color/ic_launcher_background"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
