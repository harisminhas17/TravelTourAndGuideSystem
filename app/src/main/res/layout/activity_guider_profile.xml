<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.GuiderProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/back_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginRight="25dp"
            android:text="Tour Guider Details"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/notify_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/icbell" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.github.islamkhsh.CardSliderViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slider"
                android:layout_marginTop="24dp"
                app:cardSlider_smallScaleFactor="0.9"
                app:cardSlider_otherPagesWidth="24dp"
                app:cardSlider_pageMargin="12dp"
                app:auto_slide_time="3" />

            <TextView
                android:id="@+id/tv_h_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Ali Ahmed"
                android:textColor="#00574B"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:layout_gravity="left"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/tv_h_d_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="4.8"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_g_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="Experience: 10Years" />


            <TextView
                android:id="@+id/tv_g_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:text="Phone no: +921234567890" />

            <TextView
                android:id="@+id/tv_g_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:text="Address: Islamabad Capital Territory" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="About"
                android:textColor="#054949"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_g_ab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:text="I am Good At My Work and I am a professional guider for the tourist" />

            <TextView
                android:id="@+id/tv_g_m_lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Multiple Language"
                android:textColor="#054949"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_g_lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:text="Urdu, English, Punjabi" />

            <TextView
                android:id="@+id/tv_g_m_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Guider Price"
                android:textColor="#054949"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_g_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="Per Day RS: 500" />


            <TextView
                android:id="@+id/tv_g_rev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Reviews"
                android:textColor="#054949"
                android:textSize="16sp" />


            <View
                android:id="@+id/view23"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_t_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"
                android:text="@string/terms_conditions"
                android:textColor="#054949"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_t_terms_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:text="Must read the terms and conditions before confirmation and move to the next step \n If you pay amount in advance for the guider booking.\n And you canceled the booking of the guider then 2% cut from the advance payment and remaining amount is refunded to your account\n If you are unable to pick the confirmation call within 15minutes after the tour confirmation then your guider booking is canceled.\n Make sure the confirmation of the guider within given time\n THANKS ENJOY YOUR TOUR'S WITH US :)"></TextView>

            <View
                android:id="@+id/view26"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/tv_g_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_round"
                android:fontFamily="@font/poppins_bold"
                android:text="Next"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>