<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AlbumsTravelerFeedCommunityActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/tv_traveler_c_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_traveler_c"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Community"
            android:textColor="#054949"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/tv_traveler_notify"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/icbell" />
    </LinearLayout>

    <View
        android:id="@+id/view36"
        android:layout_width="wrap_content"
        android:layout_height="20dp"></View>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="Contribute to Community"
        android:textColor="#054949" />

    <TextView
        android:id="@+id/tv_c_traveler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:text="Traveller Feed"
        android:textColor="#326969" />

    <TextView
        android:id="@+id/tv_traveler_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:text="Tourists are sharing and contributing to Pakistan tourism community."
        android:textColor="#979797" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingBottom="100dp"
        tools:listitem="@layout/places_item_horizontal"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>